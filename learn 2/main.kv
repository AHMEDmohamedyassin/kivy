InteractiveWidget:

<InteractiveWidget>:
    ToggleButton:
        id:togglebutton
        text:'OFF'
        size_hint:None , 1
        width: "100dp" 
        on_state:root.toggle_action(self)
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation:'vertical'
                TextInput:
                    id:textinput
                    text:'hello'
                Button:
                    text:"button"
                    on_press:root.click_action()
                    disabled:not root.button_enable
            Label:
                id:label
                text:'hello'
                font_name: 'fonts/Wintersong.ttf'
                font_size:80
        BoxLayout:
            orientation:'vertical'
            Label:
                text:str(int(the_slider.value))
            Switch:
                id:the_switch
                text:'text'
            ProgressBar:
                max:100
                value:the_slider.value
            Slider:
                id:the_slider
                text:'text'
                min:0
                max:100
                value:20
                orientation:"vertical"
                disabled:not the_switch.active


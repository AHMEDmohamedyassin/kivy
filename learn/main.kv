#:import utils kivy.utils
#pulic style for all buttons
<Button>
    color: 0 , 0.5 , 0.5 , 1
    font_size:24
    outline_color:0.5 , 0 , 0 , 1
    outline_width:1


<ScreenA>
    l1:l1
    i1:i1
    i2:i2

    GridLayout:
        cols:1
        size: root.width,root.height
        
        GridLayout:
            cols:2
            TextInput:
                id:i1
                text:'A'
            TextInput:
                id:i2
                text:'B'
        
        Label:
            id:l1
        
        Button:
            text:'button'
            on_press:root.pressFunc()
            background_color:utils.get_color_from_hex("#ff3399")


<ScreenB>
    # changing screen background
    canvas:
        Color:
            rgba: 0 , 0.5 , 0.5 , 0.9
        Rectangle:
            size:self.size
            pos: self.pos
    BoxLayout:
        orientation:'vertical'
        size:root.width , root.height
        padding: 10
        spacing: 10

        Button:
            text:'button A'
            size_hint: None,None
            width:100
            height:50
            pos_hint:{"center_x":0.25}

        Button:
            text:'button B'
            color: 1 , 0 , 0 , 1
            background_color: .5 , .5 , .9 

        Button:
            text:'button C'
            background_color: .5 , .5 , .9 
            background_normal:""

        Label:
            text:'the label'
            outline_color: 0.5 , 0 , 0 , 1
            outline_width:10
            bold:True
            italic:True
            underline:True
            canvas.before:
                Color: 
                    rgba : 0 , 0.5 , 0.5 , 0.5
                Rectangle:
                    pos:self.pos
                    size:self.size


<ScreenC>
    FloatLayout:
        size: root.width,root.height

        Image:
            source:'./assets/img.png'
            keep_ratio:False
            allow_stretch:True
            pos_hint:{"center_x":0.5 , "center_y":0.5}
            size_hint:(0.2 , 0.2)

        Button:
            text: 'button A'
            pos_hint:{"x":0 , "y":0}
            size_hint:(0.2 , 0.2)

        Button:
            text: 'button B'
            pos_hint:{"x":0 , "y":0.8}
            size_hint:(0.2 , 0.2)

        Button:
            text: 'button C'
            pos_hint:{"x":0.8 , "y":0}
            size_hint:(0.2 , 0.2)